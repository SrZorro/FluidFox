{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "lib": [
            "es6",
            "es7",
            "es2017",
            "esnext",
            "dom"
        ],
        "types": [
            "inferno",
            "node"
        ],
        "jsx": "preserve",
        "experimentalDecorators": true
    },
    "include": [
        "web/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}